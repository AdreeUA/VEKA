extends ./_layout/_layout
include _mixin/_settings-notifications
include _mixin/_checkbox-square

block head
    - pageTitle = 'Настройки: уведомление'

block content
    +b.MAIN.settings_notification
        .container
            .breadcrumb
                ul.breadcrumb__list
                    li.breadcrumb__item: a(href="#").breadcrumb__link Главная
                    li.breadcrumb__item: a(href="#").breadcrumb__link Личный кабинет
                    li.breadcrumb__item: a(href="#").breadcrumb__link Настройки
            +e.H1.title.title Настройки
            +b.UL.setting-nav
                +e.item
                    +e.link(href="#") Личные данные
                +e.item
                    +e.link(href="#") Смена пароля
                +e.item
                    +e.link._active(href="#") Уведомления
                +e.item
                    +e.link(href="#") Типовые цены
                +e.item
                    +e.link(href="#") Время работы офисов


            +e.content
                +e.header
                    +e.H3.subtitle Уведомления сотрудников
                    +checkbox-square({
                        id: 'all-checkbox',
                        text: 'Выбрать всё'
                    }).js-checkbox-all

                - var data = locals['data']
                +settings-notifications(data.notification.new).__notification
                +settings-notifications(data.notification.employees).__notification

            +e.content
                +e.header_border-bottom
                    +e.H3.subtitle Рассылки сайта
                    +checkbox-square({
                        id: 'all-theme',
                        text: 'Рассылка новостей: все темы'
                    }).js-checkbox-all

                - var data = locals['data']
                +settings-notifications(data.notification.distribution).__notification

                +e.BUTTON.add-region-btn.button.blue Сохранить